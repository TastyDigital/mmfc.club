</Layout>

<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(12, 1fr);
    gap: 0;
    width: 100%;
    min-height: 100dvh;
    background-color: #ccc;
    z-index: -1;
    position: relative;
  }
  .wrapper {
    padding-bottom: 116%;
    position: relative;
  }
  .poloroid-48 {
    display: none;
  }
  .wrapper > .poloroid {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
  .poloroid {
    overflow: hidden;
    background-color: #fff;
    padding: 5% 5% 26%;
    margin: 0.5px;
    position: relative;
    margin: 1%;
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
  }

  .poloroid img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    filter: saturate(0.5) brightness(125%);
    opacity: 0;
    transition: opacity 1s ease;
  }
  @media screen and (min-width: 670px) {
    .image-grid {
      grid-template-columns: repeat(6, 1fr);
      grid-template-rows: repeat(8, 1fr);
    }
    .poloroid {
      padding-bottom: 16%;
    }
  }

  @media screen and (min-width: 960px) {
    .image-grid {
      grid-template-columns: repeat(7, 1fr);
      grid-template-rows: repeat(7, 1fr);
    }
    .poloroid {
      padding-bottom: 16%;
    }
    .poloroid-48 {
      display: block;
    }
  }
  /* .poloroid img:hover {
filter:saturate(1)
 } */

  .content section.club-info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    min-height: calc(100dvh);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 960px;
    margin: 0 auto;
    max-width: 100%;
    z-index: 2;
    position: fixed;
  }
  .mmfc {
    /* position: absolute;
    top: 1rem;
    left: 50%;
    transform: translatex(-50%); */
    width: 480px;
    max-width: calc(80vw - 2rem);
    height: auto;
    /* z-index: 2;
    opacity: 0.8; */
  }
  header {
    text-align: center;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin: 2rem 0 1rem;
    /* background-color: rgba(var(--mmfc-blue), 0.5); */
    display: inline-block;
  }
  h2 {
    color: rgb(var(--mmfc-blue));
    text-shadow: 0 0 6px rgba(255, 255, 255, 0.5);
  }
  h2 > span {
    background-color: rgba(255, 255, 255, 0.5);
    padding: 0.1em;
    border-radius: 0.1em;
  }
  h2 > span > span {
    white-space: nowrap;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .footnote {
    margin: 2rem;
    text-align: center;
    font-size: 1rem;
    /* box-shadow: 3px 3px 2px rgba(var(--mmfc-blue), 0.7); */
  }
  .footnote a {
    background-color: rgba(255, 255, 255, 0.7);
    color: white;
    padding: 0.6rem;
    border-radius: 2rem;
    display: inline-block;
    margin: 0 auto;
  }
  .footnote a:hover {
    background-color: rgba(255, 255, 255, 1);
  }
  .link-card-grid {
    display: grid;
    grid-template-rows: 2;
    gap: 1rem;
    padding: 0;
    margin: 0 auto;
    max-width: 18rem;
    /* margin-bottom: 18dvh; */
  }

  @media screen and (min-width: 670px) {
    .link-card-grid {
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));

      max-width: 75%;
      gap: 2rem;
      margin-bottom: 8rem;
    }
  }
  main,
  html,
  body,
  .content {
    position: relative;
    height: 100%;
  }
  .credit {
    position: relative;
    text-align: right;
    transform: translateY(-2rem);
    font-size: 0.625rem;
    padding: 0.5em 1%;
    /* margin-top: -3.75em; */
    color: rgba(var(--mmfc-blue), 0.1);
    z-index: 2;
  }
  .credit a {
    color: rgba(var(--mmfc-blue), 0.1);
    text-decoration: none;
    transition: color 0.2s;
  }
  .credit a:hover {
    color: rgba(var(--mmfc-blue), 0.25);
    text-decoration: none;
  }
</style>
