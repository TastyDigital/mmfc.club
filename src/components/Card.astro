---
interface Props {
  title: string;
  body: string;
  href: string;
  flag: string;
  cta?: string;
}

const { href, title, body, flag, cta } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <p>
      {body}<br />
      <strong>{cta}</strong>
    </p>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <div class={`fib fi-${flag}`}></div>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #fff;
    background-image: none;
    background-size: 400%;
    border-radius: 5px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    border: 4px solid rgb(var(--mmfc-blue));
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px) calc(1.5rem - 1px);
    border-radius: 6px;
    color: rgb(var(--accent-dark));
    background-color: rgba(#fff 0.8);
    //opacity: 0.8;
    position: relative;
    /* display: flex;
    flex-direction: column;
    justify-content: space-between; */
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-bottom: 0.5rem;
    margin-top: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card h2 > span {
    display: inline-block;
    transform: translateX(0);
    transition: 0.3s transform ease-out;
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: #232323;
    //background-color: rgb(var(--accent-dark));
  }

  .link-card:is(:hover, :focus-within) h2 > span {
    transform: translateX(0.5rem);
  }
  .fib,
  .fi {
    background-size: contain;
    background-position: 50%;
    background-repeat: no-repeat;
    width: 2rem;
    height: 1.5rem;
    position: absolute;
    top: 1rem;
    left: calc(-1rem - 2px);
    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.1);
  }

  .fib.fis {
    width: 1.5rem;
    height: 1.5rem;
  }
  .fi {
    position: relative;
    display: inline-block;
    width: 1.333333em;
    line-height: 1em;
  }
  .fi:before {
    content: " ";
  }
  .fi.fis {
    width: 1em;
  }

  .fi-gb {
    background-image: url(../images/flags/gb-4x3.svg);
  }
  .fi-gb.fis {
    background-image: url(../images/flags/gb-1x1.svg);
  }

  .fi-fr {
    background-image: url(../images/flags/fr-4x3.svg);
  }
  .fi-fr.fis {
    background-image: url(../images/flags/fr-1x1.svg);
  }
</style>
