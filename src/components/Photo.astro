---
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
  imgWidth?: number;
  imgHeight?: number;
  index: number;
  isRow?: string;
  count: number;
}

const { imagePath, altText, imgWidth, imgHeight, index, isRow, count } = Astro.props;
const placement = index === 0 ? 'first' : count === index + 1 ? 'last' : '';
const zLayer = count - index;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/insta/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/images/insta/*.{jpeg,jpg,png,gif}"`
  );
---

<div class=`photo ${isRow} ${placement}`>
  <Image
    src={images[imagePath]()}
    alt={altText}
    width={imgWidth}
    height={imgHeight}
    style={{ zIndex: zLayer }}
  />
</div>

<style>
  .photo {
    // outline: 1px solid green;
    /* width: 33vw;
    height:22vh; */
    position: relative;
  }
  .photo > img {
    max-width: 33vw;
    max-height: calc(25dvh - 2/3rem);
    height: auto;
    width: auto;
    display: block;
    /* position: absolute;
    top: 50%;
    left: 50%; */
    border: 4px solid white;
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
    margin: 0 auto;
  }
  .photo:nth-child(odd) > img {
    //transform: translate(-50%, -50%) rotate(-3deg);
    transform: rotate(-3deg);
  }
  .photo:nth-child(even) > img {
    //transform: translate(-50%, -50%) rotate(3deg);
    transform: rotate(3deg);
  }
  .photo.top > img {
    margin-left: 0;
  }
  .photo.bottom > img {
    margin-right: 0;
  }
  @media screen and (min-width: 1024px) {
    /* .photo {
      width: 25vw;

    height:30vh;
    } */
    .photo > img {
      max-width: 25vw;
     // max-height:33dvh;
    max-height: calc(33dvh - 1rem);
    }
    .photo.top > img {
      margin-left: auto;
    }
    .photo.bottom > img {
      margin-right: auto;
    }

    .photo.first > img {
      margin-left: 0;
    }
    .photo.last > img {
      margin-right: 0;
    }
  }
</style>
