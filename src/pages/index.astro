<style>
  main {
    margin: auto;
    padding: 1rem;
    color: white;
    font-size: 1rem;
    line-height: 1.6;
    overflow: hidden;
    min-height: calc(100dvh - 2rem);
    position: relative;
  }
  .content {
    height: 100%;
    min-height: calc(100dvh - 2rem);
    max-width: calc(100vw - 2rem);
  }
  .content section.club-info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    min-height: calc(100dvh - 2rem);
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 960px;
    margin: 0 auto;
    max-width: 100%;
  }
  .mmfc {
    /* position: absolute;
    top: 1rem;
    left: 50%;
    transform: translatex(-50%); */
    width: 480px;
    max-width: calc(80vw - 2rem);
    height: auto;
    /* z-index: 2;
    opacity: 0.8; */
  }
  .gallery {
    display: flex;
    flex-direction: row;
    justify-content: center;
    //justify-content: space-between;
    align-items: stretch;
    gap: 0;
    z-index: -1;
    position: relative;
    min-height: calc(100dvh - 2rem);
  }
  .gallery .pic-group {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    //height: 100%;
    width: 100%;
    //flex-grow: 1;
  }

  @media screen and (min-width: 1024px) {
    .gallery {
      flex-direction: column;
      justify-content: space-between;
    }
    .gallery .pic-group {
      flex-direction: row;
    }
  }
  header {
    text-align: center;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin: 2rem 0 1rem;
    //background-color: rgba(var(--mmfc-blue), 0.5);
    display: inline-block;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .footnote {
    margin: 2rem;
    text-align: center;
    font-size: 1rem;
    //box-shadow: 3px 3px 2px rgba(var(--mmfc-blue), 0.7);
  }
  .footnote span {
    background-color: rgba(var(--mmfc-blue), 0.7);
    padding: 0.2rem 0.6rem;
    border-radius: 2rem;
  }
  .footnote code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .footnote strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-rows: 2;
    gap: 1rem;
    padding: 0;
    margin: 0 auto;
    max-width: 18rem;
    //margin-bottom: 18dvh;
  }

  @media screen and (min-width: 1024px) {
    .link-card-grid {
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));

      max-width: 75%;
      //margin-bottom: 18dvh;
      gap: 2rem;
      margin-bottom: 8rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .pic-group > .photo:first-child > img {
      margin-left: 0;
    }
    .pic-group > .photo:last-child > img {
      margin-right: 0;
    }
    .gallery .pic-group.toppics {
      align-items: flex-start;
    }
    .gallery .pic-group.bottompics {
      align-items: flex-end;
      align-content: flex-end;
    }
  }
</style>
