      <div class="image-grid">
        {
          images.slice(0, 49).map((item: { src: string }, index: number) => (
            <div class={`wrapper poloroid-${index.toString()}`}>
              <figure class={`poloroid`}>
                <img src={item.src} onload="this.style.opacity=1" />
              </figure>
            </div>
          ))
        }
      </div>
      <div class="credit">
        Website by <a href="https://tasty.digital/" target="_blank"
          >Tasty Digital</a
