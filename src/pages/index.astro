        <p class="footnote"><span>We ❤️ Football</span></p>
      </section>
      <section class="gallery">
        <div class="pic-group toppics">
          {
            topitems.map((item, index) => (
              <Photo
                isRow="top"
                imagePath={item.path}
                altText={item.alt}
                index={index}
                count={topitems.length}
              />
            ))
          }
        </div>
        <div class="pic-group midpics">
          {
            miditems.map((item, index) => (
              <Photo
                isRow="mid"
                imagePath={item.path}
                altText={item.alt}
                index={index}
                count={miditems.length}
              />
            ))
          }
        </div>
        <div class="pic-group bottompics">
          {
            bottomitems.map((item, index) => (
              <Photo
                isRow="bottom"
                imagePath={item.path}
                altText={item.alt}
                index={index}
                count={bottomitems.length}
              />
            ))
          }
        </div>
      </section>
    </div>
